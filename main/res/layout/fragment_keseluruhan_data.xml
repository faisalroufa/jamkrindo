    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Data BOD"
              android:textSize="20dp"
              android:gravity="left"
              android:layout_marginTop="10dp" android:textStyle="bold"
              android:layout_marginBottom="10dp"
    />
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/frame_BODContainer"
    >
    </FrameLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Penanggung Jawab Proyek"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    <FrameLayout
            android:id="@+id/frame_dataPenanggunJawabProyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Person in Charge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <FrameLayout
            android:id="@+id/frame_dataPIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Klaim Wanprestasi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    <FrameLayout
            android:id="@+id/frame_wanprestasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Catatan Hukum"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    <FrameLayout
            android:id="@+id/frame_hukum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Data Perusahaan Penerima Jaminan"
              android:textSize="20dp"
              android:gravity="left"
              android:layout_marginTop="10dp" android:textStyle="bold"
    />
    <FrameLayout
            android:id="@+id/frame_penerimaJaminan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </FrameLayout>
